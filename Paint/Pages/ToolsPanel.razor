@using Paint.Tools

@inject IEnumerable<ITool> Tools

<div class="tools-panel">
    <div class="btn-toolbar">
        <div class="btn-group">
            @foreach (var tool in Tools)
            {
                var cls = "btn btn-secondary" + (tool == SelectedTool ? " active" : "");
                <button class="@cls" @onclick="() => SelectedTool = tool" title="@tool.Name">@tool.Icon</button>
            }
        </div>
        <div class="btn-group">
            <ColorButton @ref="ColorButton" />
        </div>
    </div>
</div>

@code {

    public ITool SelectedTool { get; private set; }
    public ColorButton ColorButton { get; set; }

}
